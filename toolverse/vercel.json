{
  "version": 2,
  "rewrites": [
    { "source": "/packing", "destination": "/packing/public/packing/index.html" },
    { "source": "/packing/", "destination": "/packing/public/packing/index.html" },
    { "source": "/pdf-to-excel", "destination": "/pdf-to-excel/frontend/index.html" },
    { "source": "/pdf-to-excel/", "destination": "/pdf-to-excel/frontend/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
